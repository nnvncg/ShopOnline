
@{
    ViewBag.Title = "Đăng nhập vào trang Quản Trị";
    Layout = "~/Views/layout/_LayoutLogInAdmin.cshtml";

}

<div class="container d-flex align-items-center" ng-controller="LogInAdmin">
    <div class="form-holder">
        <div class="row"> 
            <div class="col-sm-6 bg-info rounded-left ">
                <br />
                <br />
                <h2 class="text-center">Tên nhà hàng</h2>
            </div>
            <div class="col-sm-6 bg-white">
                <br />
                <br />
                <h2 class="text-center">Đăng nhập</h2>
                <form class="col-sm-10 ml-5" name="frmLogIn">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Địa chỉ Email</label>
                        <input type="email" class="form-control" ng-enter="LogIn(EmailLogIn,PassLogIn)" name="email" ng-model="EmailLogIn" aria-describedby="emailHelp" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mật khẩu</label>
                        <input type="password" class="form-control" ng-enter="LogIn(EmailLogIn,PassLogIn)" name="passWord" ng-model="PassLogIn" placeholder="Mật khẩu của bạn">
                    </div>
                    <div class="form-check ml-3">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Nhớ mật khẩu</label>
                    </div>
                    <button type="submit" class="btn btn-primary" ng-click="LogIn(EmailLogIn,PassLogIn)">Đăng nhập</button>
                </form>
                <br />
            </div>

        </div>
    </div>
</div>

