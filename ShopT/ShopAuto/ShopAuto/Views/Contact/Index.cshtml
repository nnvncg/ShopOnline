@model ShopAuto.Models.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/layout/_LayoutCustomer.cshtml";
}

<div class="bg-faded p-4 my-4" id="MonAn">
    <hr class="divider">
    <h2 class="text-center text-lg text-uppercase my-0">
        Liên <strong>Hệ</strong>
    </h2>
    <hr class="divider">
    @*<div class="form-row">*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ml-xl-5 text-left">
                @Html.ValidationSummary(true)
                @if (ViewBag.Message != "")
                {
                    <p class="text text-danger">@ViewBag.Message</p>
                }

                <div class="form-group form-inline">
                    @Html.Label("Tin nhắn", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        
                        @Html.TextAreaFor(model => model.Content, new { style = " max-height:15em; width:50%", placeholder = "Viết thông điệp bạn muốn gửi" })
                        @Html.ValidationMessageFor(model => model.Content)
                    </div>
                </div>

                <div class="form-group form-inline">
                    @Html.Label("Email của bạn:", new { @class = "control-label col-md-2 " })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Email, new { @class = "control-label col-md-10", type = "email", placeholder = "Email liên hệ của bạn" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                </div>
                <div class="form-group form-inline ">
                    @Html.Label("Tên của bạn: ", new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Name, new { @class = "control-label col-md-10", placeholder = "Tên của bạn" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group form-inline">
                    <div class=" control-label col-md-2"></div>
                    <div class="col-md-offset-2 col-xl-8">
                        <input type="submit" value="Gửi" class="btn btn-light col-md-2" style="box-shadow: 5px 3px 5px #708090" />
                    </div>
                </div>
            </div>
        }
    </div>
@*</div>*@