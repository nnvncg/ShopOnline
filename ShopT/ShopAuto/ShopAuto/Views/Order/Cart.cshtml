<div class="row" ng-controller="Cart" id="Cart">
    <button class="btn btn-link" ng-click="ViewCart()" id="GioHang1" data-toggle="modal" data-target=".bd-example-modal-lg-9-m" data-placement="left" title="Giỏ hàng của bạn.">
        <img src="~/Content/img/icon_256.png" style="max-width: 40px; max-height: 40px" />
    </button>
    <div class="modal fade bd-example-modal-lg-9-m" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content ">
                <div class="modal-header">
                    <h5 class="modal-title text-center">Giỏ hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body pre-scrollable">
                    <div class="row">
                        <p class="ng-{{Message}} col-sm-12">Không có sản phẩm nào trong giỏ hàng</p>
                        <table class="table ng-{{table}}">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th style="width:15%">Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="n in myData2">
                                <tr>
                                    <td>{{$index + 1}}</td>
                                    <td><img class="card-img-top" ng-src="{{n.ProImage}}" style="max-width: 10rem;min-width:100px" alt="{{n.ProName}}" /></td>
                                    <td>{{n.ProName}}</td>
                                    <td>{{n.ProPrice| currency:"":0}} VND</td>
                                    <td class="row">
                                        <form name="frmQuantity" class="form-inline">
                                            <input type="number" name="Quantity" class="col-sm-7 rounded" @*style="width:50%"*@ min="1" ng-model="n.ProQuantity" />
                                            <button class="btn btn-sm btn-outline-success col-sm-5" ng-disabled="frmQuantity.Quantity.$invalid" ng-click="EditQuantity(n.ProId,n.ProQuantity)">sửa</button>
                                        </form>
                                    </td>
                                    <td>{{n.ProIntoMoney| currency:"":0}} VND</td>
                                    <td><i class="fa fa-trash" aria-hidden="true" data-toggle="modal" data-target="#exampleModal_34" ng-click="Delete1(n.ProId)" data-placement="left" title="Xóa mặt hàng này"></i></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer row ml-0 mr-0">
                    <div class="col-md-7 pr-0 mr-auto">
                        <div class="mt-3 float-left col-md-6">
                            <h5>Tổng tiền: {{totalMoney| currency:"":0}}<span class="text-danger">VND</span></h5>
                        </div>
                        <span id="Loi"></span>
                    </div>
                    <div class="col-md-4 float-left">
                        <button type="button" id="btnXoa" class="btn btn-secondary col-sm-5" ng-click="DeleteAll()" data-placement="left" title="Xóa tất cả khỏi giỏ hàng.">Xóa Tất Cả</button>
                        <button type="button" class="btn btn-primary col-sm-6" ng-click="Order2()" id="bntDatBan">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal_34" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog  mt-5" role="document">
            <div class="modal-content  border border-info">
                <div class="modal-header text-center">
                    <h4 class="modal-title" id="exampleModalLabel">Xóa sản phẩm</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="text-center">
                    <h5> Bạn có chắc muốn xóa {{Product3.ProName}} hay không!!</h5>
                    <button type="button" class="btn btn-info" data-dismiss="modal" aria-label="Close">Không,tôi muốn giữ lại.</button>
                    <button type="button" class="btn btn-danger" ng-click="Delete2(Product3.ProId)" data-dismiss="modal" aria-label="Close">Có, tôi chắc chắn.</button>
                </div>
                <div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>