
@{
    ViewBag.Title = "Thêm keywords";
    Layout = "~/Views/layout/_LayoutAdmin.cshtml";
}
<div class="col-sm-12" ng-controller="InformationStatus">
    <div class="col-sm-12" style="margin-top:2em;margin-bottom:2em">
        <div class="card col-sm-3" style="margin-right:1em;box-shadow:3px 3px 3px 3px #708090">
            <div class="card-body card-warning ">
                <br />
                <h4 class="card-title text-center alert alert-warning">Keywords hiện tại</h4>
                <hr />
                <div class="form-group form-inline row">
                    <p class=" col-md-8" style="max-width:100%">{{data.Keywords}}</p>
                </div>
            </div>
        </div>
        <div class="card col-sm-8" style="margin-left:1em;box-shadow:3px 3px 3px 3px #708090">
            <div class="card-body card-warning ">
                <br />
                <h4 class="card-title text-center alert alert-warning">Nhập Keywords mới</h4>
                <hr />
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Danh sách từ khóa của bạnl</label>
                    <div class="col-sm-8">
                        <input type="text" ng-model="Keywords" class="form-control" placeholder="keywords1,keywords2,keywords3,...">
                    </div>
                    <button type="submit" ng-click="ApplyKeywords()" class="btn btn-primary col-sm-4 right">Lưu trữ</button>
