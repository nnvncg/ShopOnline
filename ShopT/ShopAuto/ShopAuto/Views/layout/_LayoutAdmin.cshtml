<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    @Html.Action("TitleResult", "Infomation")
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    @*<link href="../vendor/metisMenu/metisMenu.min.css" rel="stylesheet">*@
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <script src="//cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
    <link href="~/Content/css/morris.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/ngDatepicker.css" rel="stylesheet" />
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body ng-app="myApp" ng-cloak>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0" ng-controller="Layout">
            <div class="navbar-header">
                <a class="navbar-brand" href="index.html">{{dataLayout.NameShop}}</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <p>Xin chào <a href="@Url.Action("Account","AccountAdmin")">{{dataAccountCurrent}}</a></p>
                </li>
                <li class="dropdown">|</li>
                    <!-- /.dropdown -->
                <li class="dropdown">
                    <a href="@Url.Action("LogOut","AccountAdmin")"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation" ng-controller="Layout">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-table fa-fw"></i>Hóa đơn</a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Order","OrderAdmin")">Danh sách hóa đơn</a>

                                </li>
                                <li>
                                    <a href="@Url.Action("StatusBill","StatusBill")">Danh sách tình trạng</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-table fa-fw"></i>Tài khoản</a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Account","AccountAdmin")">Thông tin tài khoản</a>

                                </li>
                                <li ng-hide="CheckAutViewGroup">
                                    <a href="@Url.Action("UserGroup","GroupUser")">Nhóm tài khoản</a>
                                </li>
                            </ul>
                        </li>
                        <li ng-hide="CheckAutViewContact">
                            <a href="@Url.Action("Contact","ContactAdmin")"><i class="fa fa-table fa-fw"></i>Liên hệ</a>
                        </li>
                        <li ng-hide="CheckAutViewProd">
                            <a href="@Url.Action("AllProduct","ProductAdmin")"><i class="fa fa-table fa-fw"></i> Sản phẩm</a>
                        </li>
                        <li ng-hide="CheckAutViewMenu">
                            <a href="@Url.Action("Index","MenuAdmin")"><i class="fa fa-table fa-fw"></i> Menu</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","CategoryAdmin")"><i class="fa fa-table fa-fw"></i> Loại sản phẩm</a>
                        </li>
                        <li ng-hide="CheckAutViewCmt">
                            <a href="@Url.Action("Comment","CommentAdmin")"><i class="fa fa-table fa-fw" ></i> Quản lý bình luận</a>
                        </li>
                        <li ng-hide="CheckAutViewSlider">
                            <a href="@Url.Action("Slider","SliderAdmin")"><i class="fa fa-table fa-fw"></i> Quản lý trình chiếu</a>
                        </li>

                        <li ng-hide="CheckAutViewInfWeb">
                            <a href="#"><i class="fa fa-table fa-fw"></i>Thông tin Website</a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Information","ShopInformtionAdmin")">Giới thiệu</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MapGoogle","ShopInformtionAdmin")">Google Map</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("MetaKey","ShopInformtionAdmin")">KeyWords</a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /#page-wrapper -->
            @RenderBody()
        </div>
    </div>

    <script src="~/scripts/jquery-1.9.1.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/angular.min.js"></script>
    @*xuất html, tương thu html.raw*@
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-sanitize.js"></script>
    <script src="~/scripts/ng-file-upload.min.js"></script>
    <script src="~/AngularJS/Module.js"></script>
    @*bộ lọc*@
    <script src="~/AngularJS/FilterScript.js"></script>
    <script src="~/AngularJS/Controller.js"></script>
    <script src="~/AngularJS/Controller2.js"></script>
    <script src="~/AngularJS/Controller3.js"></script>
    <script src="~/scripts/angular-notify.js"></script>
    <script src="~/scripts/metisMenu.min.js"></script>
    <script src="~/scripts/raphael.min.js"></script>
    <script src="~/scripts/morris.min.js"></script>
    <script src="~/scripts/sb-admin-2.js"></script>
    <script src="~/scripts/angular-ckeditor.js"></script>
    <script src="~/scripts/checklist-model.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment-with-locales.min.js"></script>
    <script src="~/Content/js/ngDatepicker.min.js"></script>
</body>

</html>