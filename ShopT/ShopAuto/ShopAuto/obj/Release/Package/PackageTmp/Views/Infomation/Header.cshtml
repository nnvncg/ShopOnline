@using ShopAuto.Models
@model List<ShopInformation>


@foreach (var item in Model)
{

    <div class="tagline-upper text-center text-heading text-shadow text-white mt-5 d-none d-lg-block mb-2">@item.NameShop</div>
    <div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5 d-none d-lg-block">@item.AddressShop | @item.Phone   | @item.Phone2  </div>

}
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-faded py-lg-4">
    @foreach (var item in Model)
    {
        <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="/">@item.NameShop</a>
    }
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav mx-auto">
            @Html.Action("MenuListResult", "Menu")
            
            <li class="nav-item px-lg-3">
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <div id="DangNhap">
                            <a class="dropdown-item" style="font-family: 'Roboto Condensed', sans-serif"  data-toggle="modal" data-target="#exampleModalCenter-100-1-2">Đăng Nhập</a>
                            <a class="dropdown-item" style="font-family: 'Roboto Condensed', sans-serif"   data-toggle="modal" data-target="#exampleModalCenter-100-1-3">Đăng Ký Thành Viên</a>
                        </div>
                        <div id="DangXuat">
                            <p class="dropdown-item" style="font-family: 'Roboto Condensed', sans-serif"></p>
                            <a class="dropdown-item" style="font-family: 'Roboto Condensed', sans-serif" href="@Url.Action("AccountInformation","Accounts")">Quản lý tài khoản</a>
                            <a class="dropdown-item" id="QLAdmin" style="font-family: 'Roboto Condensed', sans-serif" href="@Url.Action("Login","AccountAdmin")">Trang Admin</a>
                            <p class="dropdown-item" style="font-family: 'Roboto Condensed', sans-serif"><a href="@Url.Action("LogOut","Accounts")">Đăng Xuất</a></p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</nav>
